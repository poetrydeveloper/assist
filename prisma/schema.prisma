// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Project {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  title       String
  description String?
  goal        String
  steps       Step[]

  @@map("projects")
}

model Step {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  projectId   String
  content     String
  aiResponse  String?
  type        String?
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("steps")
}